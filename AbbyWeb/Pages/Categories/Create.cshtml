@page
@model AbbyWeb.Pages.Categories.Create

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row" pd-2>
            <h2 class="text-primary pl-3">Create Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisaplayOrder"></label>
            <input asp-for="@Model.Category.DisaplayOrder" class="form-control"/>
            <span asp-validation-for="Category.DisaplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px"> Create</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}
